{
  "name": "@tuckn/fs-hospitality",
  "description": "Extra methods for Node.js fs object. e.g. readAsText read a file with automatically detecting a character encoding. ",
  "version": "1.4.1",
  "author": "Tuckn <tuckn333+github@gmail.com>",
  "private": false,
  "license": "MIT",
  "homepage": "https://docs.tuckn.net/node-fs-hospitality",
  "repository": {
    "type": "git",
    "url": "https://github.com/tuckn/node-fs-hospitality.git"
  },
  "bugs": {
    "type": "git",
    "url": "https://github.com/tuckn/node-fs-hospitality/issues"
  },
  "keywords": [
    "fs",
    "file",
    "file system",
    "read",
    "write",
    "text",
    "character"
  ],
  "files": [
    "dist"
  ],
  "main": "./dist/lib/index.js",
  "bin": {
    "fs-hospitality": "./dist/bin/index.js"
  },
  "scripts": {
    "fix:eslint": "npm run lint:eslint -- --fix --ext .js,.ts ./src/",
    "fix:prettier": "npm run lint:prettier -- --write",
    "fix": "run-p fix:*",
    "lint:eslint": "eslint --ext .js,.ts ./src/",
    "lint:prettier": "prettier -l \"**/*.{json,css,md,yml,yaml}\"",
    "lint:type": "tsc --noEmit",
    "lint": "run-p lint:*",
    "test": "jest --coverage",
    "prebuild": "rimraf ./dist",
    "build:common": "tsc",
    "build": "run-p build:*",
    "predocs": "npm run build || rimraf ./docs",
    "docs:common": "jsdoc --configure ./jsdoc.json",
    "cp-docs-css": "cpx ./scripts/jsdoc.css ./docs/styles/",
    "cp-docs-img": "cpx ./assets/img ./docs/",
    "postdocs": "run-p cp-docs-*",
    "docs": "run-s docs:*",
    "prepublishOnly": "npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo @FIXME \"npx lint-staged\" fixes all .js!"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*.{json,css,md,yml,yaml}": "prettier --write"
  },
  "dependencies": {
    "cd": "0.3.3",
    "chalk": "^4.0.0",
    "chardet": "^1.0.0",
    "commander": "^5.1.0",
    "encoding-japanese": "1.0.30",
    "iconv-lite": "^0.5.1",
    "lodash": "4.17.15",
    "uuid": "8.0.0"
  },
  "devDependencies": {
    "@types/chardet": "0.8.0",
    "@types/encoding-japanese": "1.0.15",
    "@types/jest": "^25.2.1",
    "@types/lodash": "4.14.150",
    "@types/rimraf": "^3.0.0",
    "@types/uuid": "7.0.3",
    "@typescript-eslint/eslint-plugin": "2.30.0",
    "@typescript-eslint/parser": "2.30.0",
    "cpx": "1.5.0",
    "docdash": "1.2.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jsdoc": "^24.0.0",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-simple-import-sort": "5.0.3",
    "husky": "^4.2.5",
    "jest": "^25.5.2",
    "jsdoc": "3.6.4",
    "lint-staged": "10.2.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3"
  }
}
